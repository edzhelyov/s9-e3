%html
  %head
    %title Circuits builder
    %link{:href => '/circuit.css', :type => 'text/css', :rel => 'stylesheet'}
    %script{:src => '/jquery-1.6.2.min.js', :type => 'text/javascript'}
    %script{:src => '/jquery-ui-1.8.16.custom.min.js', :type => 'text/javascript'}
    %script{:src => '/circuit.js', :type => 'text/javascript'}
  %body
    #board
      :plain
        <svg id="circuit" contentScriptType="text/ecmascript" width="200" xmlns:xlink="http://www.w3.org/1999/xlink" zoomAndPan="magnify" contentStyleType="text/css" height="200" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg" version="1.0"><rect fill="black" x="0" width="198" height="198" y="0"/></svg>
    #primitives
      - @primitives.each do |primitive|
        .primitive= primitive.to_svg
    .clear
